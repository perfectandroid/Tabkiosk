<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Progress" parent="android:Theme.Holo.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/color_activity_transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/color_activity_transparent</item>
        <item name="android:bottomDark">@color/color_activity_transparent</item>
        <item name="android:bottomMedium">@color/color_activity_transparent</item>
        <item name="android:centerBright">@color/color_activity_transparent</item>
        <item name="android:centerDark">@color/color_activity_transparent</item>
        <item name="android:centerMedium">@color/color_activity_transparent</item>
        <item name="android:fullBright">@color/color_activity_transparent</item>
        <item name="android:fullDark">@color/color_activity_transparent</item>
        <item name="android:topBright">@color/color_activity_transparent</item>
        <item name="android:topDark">@color/color_activity_transparent</item>
    </style>
    <style name="white_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/btn1</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">6dp</item>
        <item name="android:background">@drawable/btnsubmit</item>
        <item name="android:inputType">number</item>
        <item name="android:gravity">center</item>
    </style>

</resources>